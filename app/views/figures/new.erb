<h2>Create New Figure</h2>

<!-- add content here -->

<form method="POST" action="/figures">
    <label>Figure Name: </label>
    <br>
    <input type="text" name="figure[name]" id="figure_name"><br><br>

    <p>Select an existing landmark or create a new one below</p>

    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |l| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=l.id%>" value="<%=l.id%>"><%= l.name %></input><br>
    <% end %>
    <br>

    <h3>New Landmark</h3>
    <label>Landmark Name: </label>
    <br>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label>Year Completed: </label>
    <br>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed"><br><br>

    <br><br>

    <p>Select an existing title or create a new one below</p>

    <h3>Existing Titles</h3>
    <% @titles.each do |t| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%=t.id%>" value="<%=t.id%>"><%= t.name %></input><br>
    <% end %>
    <br>

    <h3>New Title</h3>
    <label>Title Name: </label>
    <br>
    <input type="text" name="title[name]" id="new_title"><br><br>

    <br><br>

    <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
